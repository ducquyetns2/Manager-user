<div class="mt-4 content-course">
    <div class="row">
            {{#each newCourses}}
        <div class="col-sm-6 col-lg-4" style="margin-top:15px">
            <div class="card" style="width: 18rem;">
                <a href="/course/{{this.slug}}">
                   <img src={{this.image}} class="card-img-top" alt="Image">
                </a>
                <div class="card-body">
                    <a href="/course/{{this.slug}}" style="text-decoration:none">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">BUY</a>
                </div>
            </div>
        </div>
            {{/each}}
    </div>
</div>